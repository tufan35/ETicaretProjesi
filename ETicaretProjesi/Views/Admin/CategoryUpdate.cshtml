@using ETicaretProjesi.Models
@model Categories
@{
    ViewBag.Title = "CategoryUpdate";
    Layout = "~/Views/Shared/_Admin_layout.cshtml";
    IEnumerable<SelectListItem> cl = ViewData["catlist"] as IEnumerable<SelectListItem>;
}

<div class="portlet box blue ">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-gift"></i> Kategori Giriş Formu 
        </div>
        <div class="tools">
            <a href="" class="collapse">
            </a>
            <a href="#portlet-config" data-toggle="modal" class="config">
            </a>
            <a href="" class="reload">
            </a>
            <a href="" class="remove">
            </a>
        </div>
    </div>
    <div class="portlet-body form">
        <form class="form-horizontal" role="form" action="/Admin/CategoryUpdate" method="post" enctype="multipart/form-data">
            <div class="form-body">
                <div class="form-group">
                    <label class="col-md-3 control-label">Kategori Adı</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control input-lg" placeholder="Ürün Adı Giriniz." name="CategoryName" value="@Model.CategoryName" >
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Kategori</label>
                    <div class="col-md-9">

                        @Html.DropDownList("ParentID", cl, "Seçiniz", new { @required = "required", @class = "form-control input-lg" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label">Açıklama</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control input-lg" placeholder="Açıklama Giriniz." name="Description" required value="@Model.Description">
                    </div>
                </div>
                

                <input type="hidden" name="Categoryıd" value="@Model.Categoryıd" />

            </div>
            <div class="form-actions right1">
                <button type="button" class="btn default">Cancel</button>
                <button type="submit" class="btn green">Güncelle</button>
            </div>
        </form>
    </div>
</div>

<script>
    /sadece rakam girilmesi gereken alanı kontrol eden fonksiyon
    function numberonly(myfield, e, dec) {
        var key;
        var keychar;

        if (window.event)
            key = window.event.keyCode;
        else if (e)
            key = e.which;
        else
            return true;
        keychar = String.fromCharCode(key);

        // control keys
        if ((key == null) || (key == 0) || (key == 8) ||
            (key == 9) || (key == 13) || (key == 27))
            return true;

        // numbers
        else if ((("0123456789").indexOf(keychar) > -1))
            return true;

        // decimal point jump
        else if (dec && (keychar == ".")) {
            myfield.form.elements[dec].focus();
            alert("Lütfen sadece rakam giriniz.");
            return false;
        }
        else {
            alert("Lütfen sadece rakam giriniz.");
            return false;
        }
    }

</script>



