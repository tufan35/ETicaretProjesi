@using ETicaretProjesi.Models
@model vw_suppliers
@{
    ViewBag.Title = "SupplierUpdate";
    Layout = "~/Views/Shared/_Admin_layout.cshtml";
}


<div class="portlet box purple-jungle ">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-gift"></i> Marka Giriş Formu
        </div>
        <div class="tools">
            <a href="" class="collapse">
            </a>
            <a href="#portlet-config" data-toggle="modal" class="config">
            </a>
            <a href="" class="reload">
            </a>
            <a href="" class="remove">
            </a>
        </div>
    </div>
    <div class="portlet-body form">
        <form class="form-horizontal" role="form" action="/Admin/SupplierUpdate" method="post" enctype="multipart/form-data">
            <div class="form-body">
                <div class="form-group">
                    <label class="col-md-3 control-label">Marka Adı</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control input-lg" placeholder="Marka Adı Giriniz." name="BrandName" value="@Model.BrandName">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Resimler</label>
                    <div class="col-md-9">
                        <input type="file" class="form-control input-lg" placeholder="Resimler" name="PhotoPath" value="@Model.Photopath">
                    </div>
                </div>

                <input type="hidden" name="SupplierID" value="@Model.SupplierID" />

            </div>
            <div class="form-actions right1">
                <button type="button" class="btn default">Cancel</button>
                <button type="submit" class="btn green">Güncelle</button>
            </div>
        </form>
    </div>
</div>





